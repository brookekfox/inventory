<%= render 'users/nav' %>
<h1 class="heading text-capitalize"><%= @book.title %></h1>

<div class="info-list">
	<p>Author: <%= @book.author_first %> <%= @book.author_last %></p>
	<p>Year:   <%= @book.year %></p>
	<p>Genre:  <%= @book.genre %></p>
	<p>Loaned Out?: <%= @book.loaned_out %></p>
</div>

<br><br>
<p class="link">
	<%= link_to 'Delete this book!', @book, method: :delete, data: {confirm: "Are you sure?"} %><br>
	<%= link_to 'Edit this book!', edit_book_path(@book) %><br>
</p>