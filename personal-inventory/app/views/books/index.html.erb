<%= render 'users/nav' %>
<h1 class="heading">Books</h1>

<table class="index-list">
	<thead>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Year</th>
		<th>Genre</th>
		<th>Loaned Out</th>
		<th>Actions</th>
		<th colspan="6"></th>
	</tr>
	</thead>

	<tbody>
	<% @books.sort_by { |b| b[:title] }.each do |book| %>
		<tr>
			<!--<td><%#= book.user.name %></td>-->
			<td><p class="text-capitalize"><%= book.title %></p></td>
			<td><p class="text-capitalize"><%= book.author_first %> <%= book.author_last %></p></td>
			<td><p class="text-capitalize"><%= book.year %></p></td>
			<td><p class="text-capitalize"><%= book.genre %></p></td>
			<td><p class="text-capitalize"><%= book.loaned_out %></p></td>
			<td><%= link_to 'View', book %>
				  <%= link_to 'Delete', book, method: :delete, data: {confirm: "Are you sure?"} %>
				  <%= link_to 'Edit', edit_book_path(book) %></td>
		</tr>
	<% end %>
	</tbody>
</table>